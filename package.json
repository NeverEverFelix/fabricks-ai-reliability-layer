{
  "name": "fabricks-ai-reliability-layer",
  "version": "0.2.1",
  "description": "Intent-based reliability engine for LLM workflows.",
  "license": "MIT",
  "author": "Felix Moronge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeverEverFelix/fabricks-ai-reliability-layer.git"
  },
  "homepage": "https://github.com/NeverEverFelix/fabricks-ai-reliability-layer#readme",
  "bugs": {
    "url": "https://github.com/NeverEverFelix/fabricks-ai-reliability-layer/issues"
  },
  "keywords": [
    "ai",
    "llm",
    "workflow",
    "orchestration",
    "reliability",
    "retry",
    "timeout",
    "fallback",
    "telemetry",
    "observability",
    "openai",
    "provider",
    "typescript",
    "nodejs",
    "intent",
    "engine",
    "automation",
    "resilience",
    "distributed-systems",
    "fault-tolerance"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
