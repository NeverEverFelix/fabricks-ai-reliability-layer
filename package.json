{
    "name": "ai-reliability-layer",        // or scoped: "@felixmoronge/ai-reliability-layer"
    "version": "0.1.0",
    "description": "Intent-based reliability engine for LLM workflows.",
    "license": "MIT",
    "author": "Felix Moronge",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/<you>/ai-reliability-layer.git"
    },
    "homepage": "https://github.com/<you>/ai-reliability-layer#readme",
    "bugs": {
      "url": "https://github.com/<you>/ai-reliability-layer/issues"
    },
    "main": "dist/index.cjs",     // if you build both CJS + ESM, or just dist/index.js
    "module": "dist/index.mjs",   // optional, for ESM-only
    "types": "dist/index.d.ts",
    "files": [
      "dist"
    ],
    "scripts": {
      "build": "tsc -p tsconfig.build.json",
      "test": "vitest run",
      "test:watch": "vitest",
      "lint": "eslint 'src/**/*.{ts,tsx}'",
      "format": "prettier --check .",
      "format:fix": "prettier --write .",
      "clean": "rimraf dist",
      "prepare": "npm run build"   // ensures build before npm publish / npm link
    },
    "devDependencies": {
      // typescript, vitest, eslint, prettier, ts-node, etc.
    },
    "peerDependencies": {
      // optionally: "openai": "^4.0.0" if you integrate their SDK
    }
  }
  